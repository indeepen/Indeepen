<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="@dimen/my_profile_thumb"
        android:layout_height="@dimen/my_profile_thumb"
        android:id="@+id/img_comm_user_thPro"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_comm_artist"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/img_comm_user_thPro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_comm_text"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/text_comm_artist" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_comm_date"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>