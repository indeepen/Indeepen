<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:background="#ffffff"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="254dp"
            android:layout_height="181dp"
            android:layout_weight="0.47"
            android:layout_gravity="center"
            android:background="#ffffff">

            <ImageView
                android:layout_width="@dimen/my_profile_thumb"
                android:layout_height="@dimen/my_profile_thumb"
                android:id="@+id/img_pop_imissu"
                android:layout_marginLeft="0dp"
                android:src="@drawable/ic_stub"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/btn_pop_imissu_ok" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="응원 할겨?"
                android:id="@+id/text_pop_imissu"
                android:layout_alignBottom="@+id/img_pop_imissu"
                android:layout_centerHorizontal="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i miss you"
                android:id="@+id/btn_pop_imissu_ok"
                android:layout_marginTop="36dp"
                android:layout_below="@+id/img_pop_imissu"
                android:layout_toStartOf="@+id/text_pop_imissu" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:id="@+id/btn_pop_imissu_no"
                android:layout_alignTop="@+id/btn_pop_imissu_ok"
                android:layout_toEndOf="@+id/text_pop_imissu" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>