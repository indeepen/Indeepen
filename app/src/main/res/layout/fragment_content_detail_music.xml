<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.release.indeepen.content.art.detail.ContentDetailMusicFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.release.indeepen.content.art.detail.ContentDetailHeaderView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/img_detail_music"
            android:scaleType="centerCrop"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/img_detail_foreground"
            android:scaleType="center"
            android:layout_gravity="center"
            android:alpha="0.6"
            android:src="@drawable/ic_stub"
            />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar_detail_music"
            android:indeterminate="false"
            android:layout_gravity="right|bottom" />

    </FrameLayout>

</LinearLayout>
